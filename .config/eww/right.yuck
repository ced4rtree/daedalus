; variables
(defvar brightness_value "80") ; this is updated by a script

(defpoll battery :interval "1m"
         "cat /sys/class/power_supply/BAT*/capacity")

(defvar volume "50")

(deflisten date_string "scripts/date")

(defvar date_format false) ; false is shorthand, true is longhand

;; Widgets
(defwidget metric [label value onchange]
           (box :orientation "h"
                :class "metric"
                :space-evenly false
                (box :class "label" label)
                (scale :min 0
                       :max 101
                       :active {onchange != ""}
                       :value value
                       :onchange onchange)))

(defwidget brightness []
           (label  :text "ğŸ”† ${brightness_value}%    "
                   :justify "center"
                   :xalign 0.5
                   :class "brightness"))

(defwidget memory []
           (label  :text "ğŸ’¾ ${round(EWW_RAM.used_mem_perc, 0)}%"
                   :limit-width 9
